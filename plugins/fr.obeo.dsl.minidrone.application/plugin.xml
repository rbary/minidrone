<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="fr.obeo.dsl.minidrone.application.MinidroneApplication">
         </run>
      </application>
   </extension>
   <extension
         id="MinidroneDesigner"
         point="org.eclipse.core.runtime.products">
      <product
            application="fr.obeo.dsl.minidrone.application.application"
            name="Minidrone Designer">
         <property
               name="applicationCSS"
               value="platform:/plugin/fr.obeo.dsl.minidrone.application/default.css">
         </property>
         <property
               name="appName"
               value="Minidrone Designer">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_about.gif">
         </property>
         <property
               name="windowImages"
               value="icons/logo_16.gif,icons/logo_32.gif,icons/logo_64.gif">
         </property>
      </product>
   </extension>

</plugin>
